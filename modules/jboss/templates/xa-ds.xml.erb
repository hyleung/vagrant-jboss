<?xml version="1.0" encoding="UTF-8"?>
<datasources>
  <xa-datasource>
    <jndi-name><%= @dsJndiName %></jndi-name>
    <track-connection-by-tx>true</track-connection-by-tx> 
          <isSameRM-override-value>false</isSameRM-override-value> 
          <xa-datasource-class><%= @dsClass %></xa-datasource-class> 
          <xa-datasource-property name="URL"><%= @dsUrl %></xa-datasource-property> 
          <xa-datasource-property name="User"><%= @dsUser %></xa-datasource-property> 
          <xa-datasource-property name="Password"><%= @dsPassword %></xa-datasource-property> 
          <exception-sorter-class-name><%= @dsExceptionSorterClass %></exception-sorter-class-name> 
          <no-tx-separate-pools/> 
          <metadata>
                <type-mapping><%= @dsTypeMapping %></type-mapping>
          </metadata>
  </xa-datasource>
</datasources>